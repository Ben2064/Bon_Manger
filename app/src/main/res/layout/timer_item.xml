<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/box_dark"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:layout_gravity="center">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timerIcon"
            android:max="50"
            android:progress="40"
            android:progressDrawable="@drawable/circular_countdown"
            android:layout_margin="2dp"
            android:indeterminate="false" />
        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VOID"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:textSize="15dip"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/timeUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VOID"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:textSize="15dip"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Timer Name"
        android:id="@+id/timerName"
        android:layout_weight="10"
        android:autoText="false"
        android:textColor="@color/text_white"
        android:textAlignment="center"
        android:layout_margin="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="X"
        android:id="@+id/timerDelete"
        android:textSize="30dp"
        android:background="@color/nope_red"
        android:layout_weight="20"
        android:layout_margin="10dp" />

</LinearLayout>