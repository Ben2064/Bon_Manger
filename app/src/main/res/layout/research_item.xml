<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Nicolas">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#ffd5d5d5">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageRechRecette"
                android:adjustViewBounds="true"
                android:cropToPadding="true" />

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="15dp"
                android:background="#ffffffff"
                android:alpha=".50"
                android:layout_gravity="left|bottom"
                android:id="@+id/ratingFrame">

            </FrameLayout>

            <RatingBar
                android:id="@+id/myRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_gravity="left|bottom"
                android:alpha="1" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/nomRechRecette"
                android:layout_column="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/cuisineRechRecette"
                    android:layout_column="2"
                    android:layout_gravity="left|bottom"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/categorieRechRecette"
                    android:layout_column="3"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="3.49"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/subcategorieRechRecette"
                    android:layout_column="4"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="5" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</TableLayout>